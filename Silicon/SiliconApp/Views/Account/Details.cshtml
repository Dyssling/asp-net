@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    bool isDark = (themeMode == "dark");
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/account_details@(isDark ? "_dark" : "").min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/account_sidebar@(isDark ? "_dark" : "").min.css" asp-append-version="true" />
}

@section Script {
    <script src="~/js/validation.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Views/Shared/Components/_AccountDetailsSidebar.cshtml")

<section class="details">
    <h1>Account Details</h1>
    @await Html.PartialAsync("~/Views/Shared/Sections/Account/Details/_BasicInfoForm.cshtml")
    @await Html.PartialAsync("~/Views/Shared/Sections/Account/Details/_AddressForm.cshtml")
</section>