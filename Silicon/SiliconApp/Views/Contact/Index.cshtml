@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    bool isDark = (themeMode == "dark");
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/contact@(isDark ? "_dark" : "").min.css" asp-append-version="true" />
}

@section Script {
    <script src="~/js/validation.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Views/Shared/Sections/Contact/_Contact.cshtml")
@await Html.PartialAsync("~/Views/Shared/Sections/Contact/_Map.cshtml")