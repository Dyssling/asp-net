@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    bool isDark = (themeMode == "dark");
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/courses@(isDark ? "_dark" : "").min.css" asp-append-version="true" />
}

@await Html.PartialAsync("~/Views/Shared/Sections/Courses/_Courses.cshtml")
@await Html.PartialAsync("~/Views/Shared/Sections/Courses/_WorkWithUs.cshtml")