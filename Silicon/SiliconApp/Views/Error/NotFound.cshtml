@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    bool isDark = (themeMode == "dark");
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/not_found@(isDark ? "_dark" : "").min.css" asp-append-version="true" />
}

@await Html.PartialAsync("~/Views/Shared/Sections/NotFound/_NotFound.cshtml")