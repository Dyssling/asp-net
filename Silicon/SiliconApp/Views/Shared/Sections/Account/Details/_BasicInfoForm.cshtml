@model AccountDetailsViewModel

<div id="basic-info-form" class="basic-info-form">
    <h3>Basic Info</h3>
    <form method="post" asp-controller="Account" asp-action="Details" asp-fragment="basic-info" onsubmit="basicInfoSubmit()" novalidate>
        <input type="hidden" asp-for="BasicInfoForm.BasicInfoFormValue" />
        <div class="double-input-container">
            <div>
                <label asp-for="BasicInfoForm.FirstName"></label>
                <input asp-for="BasicInfoForm.FirstName" value="@Model.UserEntity.FirstName" class="text-input" />
                <span asp-validation-for="BasicInfoForm.FirstName"></span>
            </div>
            <div>
                <label asp-for="BasicInfoForm.LastName"></label>
                <input asp-for="BasicInfoForm.LastName" value="@Model.UserEntity.LastName" class="text-input" />
                <span asp-validation-for="BasicInfoForm.LastName"></span>
            </div>
        </div>
        <div class="double-input-container">
            <div>
                <label asp-for="BasicInfoForm.Email"></label>
                <input asp-for="BasicInfoForm.Email" value="@Model.UserEntity.Email" class="text-input" />
                <span asp-validation-for="BasicInfoForm.Email"></span>
            </div>
            <div>
                <label asp-for="BasicInfoForm.Phone"></label>
                <input asp-for="BasicInfoForm.Phone" value="@Model.UserEntity.PhoneNumber" class="text-input" />
                <span asp-validation-for="BasicInfoForm.Phone"></span>
            </div>
        </div>
        <label asp-for="BasicInfoForm.Bio">Bio <span>(optional)</span></label>
        <textarea asp-for="BasicInfoForm.Bio" value="@Model.UserEntity.Bio" class="text-input"></textarea>
        <div class="btn-container">
            <a class="btn light" asp-controller="Account" asp-action="Details">Cancel</a>
            <button type="submit" class="btn">Save changes</button>
        </div>
    </form>
</div>
