@model SingleCourseViewModel

<section class="course-heading">
    <div class="course-heading-container">
        <div class="breadcrumbs">
            <i class="fa-regular fa-house"></i>
            <a class="home" asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa-regular fa-chevrons-right"></i>
            <a asp-controller="Courses" asp-action="Index">Courses</a>
            <i class="fa-regular fa-chevrons-right"></i>
            <p>@Model.CourseEntity!.Title</p>
        </div>
        <div class="tags">

            @if (Model.CourseEntity.IsBestSeller)
            {
                <p class="best-seller">Best Seller</p>
            }

            <p>Digital</p>
        </div>
        <h1>@Model.CourseEntity!.Title</h1>
        <p>@Model.CourseEntity!.Description</p>
        <div class="info">
            <div class="reviews">

                @if (Model.CourseEntity!.Rating != null)
                {
                    for (int i = 0; i < Model.CourseEntity!.Rating && i < 5; i++)
                    {
                        <i class="fa-solid fa-star"></i>
                    }

                    for (int i = 0; i < (5 - Model.CourseEntity!.Rating); i++)
                    {
                        <i class="fa-regular fa-star"></i>
                    }
                }

                @if (Model.CourseEntity.LikesInNumbers != null)
                {
                    <p>(@(Model.CourseEntity.LikesInNumbers / 1000)K reviews)</p>
                }
                
            </div>
            <div class="likes">
                <i class="fa-regular fa-thumbs-up"></i>

                @if (Model.CourseEntity.LikesInNumbers != null)
                {
                    <p>@(Model.CourseEntity.LikesInNumbers / 1000)K likes</p>
                }

            </div>
            <div class="length">
                <i class="fa-regular fa-clock"></i>
                <p>@Model.CourseEntity.Hours hours</p>
            </div>
        </div>
        <div class="author">
            <img src="~/images/profile-pic.png" alt="Author">
            <div>
                <p>Created by</p>
                <p class="name">@Model.CourseEntity.Author</p>
            </div>
        </div>
    </div>
</section>